@{
    ViewData["Title"] = "Hủy Đăng Ký Nhận Tin";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <i class="bi bi-envelope-slash display-1 text-warning"></i>
                    <h2 class="mt-3">Hủy Đăng Ký Nhận Tin</h2>
                    
                    @if (ViewBag.IsSubscribed)
                    {
                        <p class="text-muted">Chúng tôi rất tiếc khi bạn muốn rời đi. Bạn có chắc chắn muốn hủy đăng ký nhận tin từ KLDShop?</p>
                        <p><strong>Email:</strong> @ViewBag.Email</p>
                        
                        <form method="post" asp-controller="Newsletter" asp-action="ConfirmUnsubscribe">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="email" value="@ViewBag.Email" />
                            
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-x-circle"></i> Xác Nhận Hủy Đăng Ký
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Quay Lại Trang Chủ
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted">Email này đã được hủy đăng ký trước đó.</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                            <i class="bi bi-house"></i> Về Trang Chủ
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
