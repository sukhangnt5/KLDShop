@model List<Order>

@{
    ViewData["Title"] = "Quản Lý Đơn Hàng - Admin";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 d-inline-block">
                <i class="bi bi-bag"></i> Quản Lý Đơn Hàng
            </h1>
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary float-end">
                <i class="bi bi-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Danh Sách Đơn Hàng</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Khách Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Thanh Toán</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.User?.FullName</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@order.FinalAmount.ToString("#,##0")đ</td>
                            <td>
                                <select class="form-select form-select-sm" onchange="updateOrderStatus(@order.OrderId, this.value)">
                                    @if (order.Status == "Pending")
                                    {
                                        <option value="Pending" selected>Chờ Xử Lý</option>
                                    }
                                    else
                                    {
                                        <option value="Pending">Chờ Xử Lý</option>
                                    }

                                    @if (order.Status == "Confirmed")
                                    {
                                        <option value="Confirmed" selected>Đã Xác Nhận</option>
                                    }
                                    else
                                    {
                                        <option value="Confirmed">Đã Xác Nhận</option>
                                    }

                                    @if (order.Status == "Processing")
                                    {
                                        <option value="Processing" selected>Đang Xử Lý</option>
                                    }
                                    else
                                    {
                                        <option value="Processing">Đang Xử Lý</option>
                                    }

                                    @if (order.Status == "Shipped")
                                    {
                                        <option value="Shipped" selected>Đã Gửi</option>
                                    }
                                    else
                                    {
                                        <option value="Shipped">Đã Gửi</option>
                                    }

                                    @if (order.Status == "Delivered")
                                    {
                                        <option value="Delivered" selected>Đã Giao</option>
                                    }
                                    else
                                    {
                                        <option value="Delivered">Đã Giao</option>
                                    }

                                    @if (order.Status == "Cancelled")
                                    {
                                        <option value="Cancelled" selected>Đã Hủy</option>
                                    }
                                    else
                                    {
                                        <option value="Cancelled">Đã Hủy</option>
                                    }
                                </select>
                            </td>
                            <td>
                                @{
                                    string paymentBadge = order.PaymentStatus switch
                                    {
                                        "Paid" => "success",
                                        "Unpaid" => "warning",
                                        "Pending" => "info",
                                        _ => "secondary"
                                    };
                                    
                                    string paymentText = order.PaymentStatus switch
                                    {
                                        "Paid" => "Đã Thanh Toán",
                                        "Unpaid" => "Chưa Thanh Toán",
                                        "Pending" => "Chờ Xác Nhận",
                                        _ => order.PaymentStatus
                                    };
                                }
                                <span class="badge bg-@paymentBadge">@paymentText</span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Order", new { id = order.OrderId })" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Chi Tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="card-footer bg-light">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Orders", "Admin", new { page = currentPage - 1 })">
                                    <i class="bi bi-chevron-left"></i> Trang Trước
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            @if (i == currentPage)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Orders", "Admin", new { page = i })">@i</a>
                                </li>
                            }
                        }

                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Orders", "Admin", new { page = currentPage + 1 })">
                                    Trang Sau <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function updateOrderStatus(orderId, status) {
            if (confirm('Bạn có chắc chắn muốn cập nhật trạng thái đơn hàng?')) {
                fetch('@Url.Action("UpdateOrderStatus", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ orderId: orderId, status: status })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Lỗi: ' + data.message);
                    }
                })
                .catch(error => alert('Lỗi: ' + error));
            }
        }
    </script>
}

<style>
    .card {
        border-radius: 10px;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .form-select-sm {
        max-width: 180px;
    }
</style>
